<section id="homeContainer" class="container">
    <div class="row">
        <div class="column-left col-xs-12 col-md-9">
            <div class="slideshow hidden-xs">
                <ul class="rslides">
                <% @slideshowPosts.each do |post| %>
                    <li>
                        <img class="img-responsive" src="<%= post.slideshowImageUrl %>" />
                        <div class="content content-blurred">
                            <a href="<%= post.path %>"><h5><%= post.title %></h5></a>
                            <a href="<%= post.path %>"><em>read more...</em></a>
                        </div>
                        <div class="content">
                            <a href="<%= post.path %>"><h5><%= post.title %></h5></a>
                            <a href="<%= post.path %>"><em>read more...</em></a>
                        </div>
                    </li>
                <% end %>
                </ul>
            </div>

            <div class="trending-items widget">
                <div class="shopthepost-widget hidden-xs" data-widget-id="303944">
                    <script type="text/javascript">!function (d, s, id) { var e, p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { e = d.createElement(s); e.id = id; e.src = p + '://' + 'widgets.rewardstyle.com' + '/js/shopthepost.js'; d.body.appendChild(e); } if (typeof window.__stp === 'object') if (d.readyState === 'complete') { window.__stp.init(); } }(document, 'script', 'shopthepost-script');</script><div class="rs-adblock"><img src="//assets.rewardstyle.com/images/search/350.gif" onerror="this.parentNode.innerHTML = 'Disable your ad blocking software to view this content.'" style="width: 15px; height: 15px;" /><noscript>JavaScript is currently disabled in this browser. Reactivate it to view this content.</noscript></div>
                </div>
            </div>

            <hr class="hidden-xs" />

            <div class="posts">
                <% @posts.each_with_index do |post, index| %>
                    <div class="post panel panel-default">
                        <div class="post-inner panel-body">
                            <div class="header">
                                <a href="<%= post.path %>" target="_blank"><h4 class="title"><%= post.title %></h4></a>
                                <div><%= post.publishedDate %></div>
                            </div>
                            <div><%= post.content %></div>
                        </div>
                        <div class="post-share">
                            <a href="https://www.facebook.com/dialog/share?app_id=622972777808767&display=popup&href=<%= get_url_for_path(post.path) %>&redirect_uri=<%= get_url_for_path(post.path) %>" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="https://twitter.com/intent/tweet?text=<%= post.title %>&via=fancythingsblog&url=<%= get_url_for_path(post.path) %>" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="https://plus.google.com/share?url=<%= get_url_for_path(post.path) %>" target="_blank"><i class="fa fa-google-plus"></i></a>
                            <a href="mailto:?body=I thought you might enjoy reading this post called <%= post.title %> on Fancy Things! <%= get_url_for_path(post.path) %>"><i class="fa fa-envelope"></i></a>
                        </div>
                        <div class="disqus">
                            <i class="fa fa-comment"></i>
                            <a class="disqus-count" href="<%= get_url_for_path(post.path) %>" data-disqus-url="<%= post.blogger_url %>"></a>
                        </div>
                    </div>
                    <% if index < (@posts.length - 1) %>
                    <ul class="ft-sig">
                        <li class="divider hidden-xs"><hr /></li>
                        <li><%= image_tag 'logo250x250.png' %></li>
                        <li class="divider hidden-xs"><hr /></li>
                    </ul>
                    <% end %>
                <% end %>
            </div>

            <div class="view-more-posts">
                <a href="./archive" class="btn btn-primary ft-link-btn">
                    View Older Posts
                </a>
            </div>
        </div>
        <div class="column-right hidden-xs hidden-sm col-md-3">
            <%=render('shared/rightColumn')%>
        </div>
    </div>
</section>

<ul class="ft-sig">
    <li class="divider hidden-xs"><hr class="wide" /></li>
    <li><%= image_tag 'logo250x250.png' %></li>
    <li class="divider hidden-xs"><hr class="wide" /></li>
</ul>


<div class="ft-grams container-fluid">
    <div class="ltk-header">
        <h4>Shop Fancy Things on Instagram</h4>
    </div>
    <div class="ltkwidget-widget row" data-rows="2" data-cols="8" data-show-frame="false" data-user-id="18622" data-padding="2">
        <script type="text/javascript">!function (d, s, id) { var e, p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { e = d.createElement(s); e.id = id; e.src = p + '://' + 'widgets.rewardstyle.com' + '/js/ltkwidget.js'; d.body.appendChild(e); } if (typeof (window.__ltkwidget) === 'object') { if (document.readyState === 'complete') { __ltkwidget.init(); } } }(document, 'script', 'ltkwidget-script');</script><div class="rs-adblock"><img src="//assets.rewardstyle.com/images/search/350.gif" onerror="                this.parentNode.innerHTML = 'Disable your ad blocking software to view this content.'" /><noscript>JavaScript is currently disabled in this browser. Reactivate it to view this content.</noscript></div>
    </div>
</div>

<%= javascript_include_tag 'home' %>

